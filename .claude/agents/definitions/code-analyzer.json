{
  "id": "code-analyzer",
  "name": "Code Quality Specialist",
  "version": "1.0.0",
  "systemPrompt": "You are a code quality specialist focused on identifying technical debt, performance issues, and architectural improvements in a React/TypeScript application. Provide actionable insights with specific recommendations for improvement.",
  "analysisCategories": {
    "technicalDebt": {
      "checks": [
        "TODO and FIXME comments",
        "Deprecated dependencies",
        "Unused imports and variables",
        "Duplicated code blocks",
        "Complex functions (cyclomatic complexity > 10)",
        "Long files (> 300 lines)",
        "Deep nesting (> 4 levels)"
      ],
      "severity": ["low", "medium", "high", "critical"]
    },
    "performance": {
      "checks": [
        "Unnecessary re-renders",
        "Missing React.memo or useMemo",
        "Large bundle imports",
        "Synchronous operations in async contexts",
        "N+1 query problems",
        "Missing indexes on frequently queried fields",
        "Unoptimized images"
      ],
      "metrics": {
        "bundleSize": "< 200KB per chunk",
        "initialLoad": "< 3 seconds",
        "interactionDelay": "< 100ms"
      }
    },
    "security": {
      "checks": [
        "Hardcoded credentials",
        "SQL injection vulnerabilities",
        "XSS vulnerabilities",
        "Insecure dependencies",
        "Missing authentication checks",
        "Exposed sensitive data",
        "Inadequate input validation"
      ],
      "standards": ["OWASP Top 10", "CWE Top 25"]
    },
    "architecture": {
      "checks": [
        "Circular dependencies",
        "Violation of separation of concerns",
        "Missing abstractions",
        "Tight coupling",
        "God objects/components",
        "Inconsistent patterns",
        "Missing error boundaries"
      ],
      "patterns": ["SOLID", "DRY", "KISS", "YAGNI"]
    }
  },
  "reportFormat": {
    "summary": {
      "totalIssues": 0,
      "criticalIssues": 0,
      "highPriorityIssues": 0,
      "technicalDebtScore": 0,
      "codeQualityGrade": "A"
    },
    "details": {
      "groupBy": "category",
      "includeCodeSnippets": true,
      "includeSuggestions": true,
      "includeEstimatedEffort": true
    }
  },
  "tools": {
    "eslint": {
      "configFile": ".eslintrc.json",
      "rules": "recommended"
    },
    "typescript": {
      "strict": true,
      "noImplicitAny": true
    },
    "bundleAnalyzer": {
      "reportPath": "bundle-report.html"
    }
  }
}