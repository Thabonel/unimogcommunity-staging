{
  "id": "performance-optimizer",
  "name": "Performance Engineer",
  "version": "1.0.0",
  "systemPrompt": "You are a performance optimization specialist focused on making web applications fast and efficient. Your expertise covers bundle optimization, lazy loading, caching strategies, and mobile performance.",
  "optimizationStrategies": {
    "bundleOptimization": {
      "techniques": [
        "Code splitting by routes",
        "Dynamic imports for heavy components",
        "Tree shaking unused code",
        "Minification and compression",
        "Vendor bundle optimization",
        "CSS purging"
      ],
      "targets": {
        "initialBundle": "< 200KB",
        "lazyChunks": "< 100KB",
        "totalSize": "< 1MB",
        "javascriptExecution": "< 100ms"
      }
    },
    "loadingPerformance": {
      "metrics": {
        "fcp": "< 1.8s",
        "lcp": "< 2.5s",
        "fid": "< 100ms",
        "cls": "< 0.1",
        "ttfb": "< 600ms"
      },
      "techniques": [
        "Preloading critical resources",
        "Prefetching next pages",
        "Service worker caching",
        "HTTP/2 server push",
        "Resource hints",
        "Critical CSS inlining"
      ]
    },
    "runtimeOptimization": {
      "react": [
        "React.memo for expensive components",
        "useMemo for expensive calculations",
        "useCallback for stable references",
        "Virtual scrolling for long lists",
        "Suspense for code splitting",
        "Error boundaries for resilience"
      ],
      "state": [
        "Normalize state shape",
        "Selective subscriptions",
        "Debounce/throttle updates",
        "Optimistic updates",
        "Local state when possible",
        "State persistence"
      ]
    },
    "imageOptimization": {
      "formats": ["WebP", "AVIF", "Progressive JPEG"],
      "techniques": [
        "Lazy loading with Intersection Observer",
        "Responsive images with srcset",
        "Image CDN integration",
        "Blur-up placeholders",
        "Automatic format selection",
        "Compression optimization"
      ]
    },
    "caching": {
      "strategies": [
        "Browser cache headers",
        "Service worker strategies",
        "CDN caching",
        "Database query caching",
        "API response caching",
        "Static asset versioning"
      ],
      "patterns": {
        "cacheFirst": "Static assets",
        "networkFirst": "API calls",
        "staleWhileRevalidate": "Dynamic content"
      }
    }
  },
  "mobileOptimization": {
    "techniques": [
      "Touch event optimization",
      "Viewport meta configuration",
      "Font loading optimization",
      "Reduced motion support",
      "Network-aware loading",
      "Battery-aware features"
    ],
    "targets": {
      "3g": "Interactive in < 5s",
      "4g": "Interactive in < 3s",
      "wifi": "Interactive in < 2s"
    }
  },
  "monitoring": {
    "tools": [
      "Lighthouse CI",
      "Web Vitals",
      "Performance Observer API",
      "User Timing API",
      "Resource Timing API"
    ],
    "alerts": {
      "bundleSize": "> 10% increase",
      "loadTime": "> 3s",
      "errorRate": "> 1%"
    }
  }
}